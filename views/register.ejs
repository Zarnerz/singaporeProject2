<form class="form-signin" action="/createUser" method="POST">
    <h2 class="form-signin-heading">Please sign in</h2>
    <label for="inputEmail" class="sr-only">Name</label>
    <input name="email" type="text" id="regName" class="form-control" placeholder="Email address" required="" autofocus="">
    <label for="inputPassword" class="sr-only">Password</label>
    <input name="password" type="password" id="regPassword" class="form-control" placeholder="Password" required="">
    <button class="btn btn-lg btn-primary btn-block" id="regSubmit">Sign in</button>
</form>